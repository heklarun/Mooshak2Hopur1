@model Mooshak2.Models.CoursesViewModels

@{
    ViewBag.Title = "Student Course";
    Layout = "~/Views/Shared/Student_Layout.cshtml";
}
<div class="container body-content">
    <h2>@Model.courseName</h2>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Projects</th>
                    <th>Opening date</th>
                    <th>Closing date</th>
                </tr>
                @if (Model.projects == null || Model.projects.Count() == 0)
            {
                    <tr>
                        <td>No projects assigned</td>
                        <td></td>
                        <td></td>
                    </tr>
                }
                @if (Model.projects != null && Model.projects.Count() > 0)
            {
                foreach (var project in Model.projects)
                {
                        <tr>
                            <td>
                                <a href="@Url.Action("StudentProject", "Student" , new {projectID=project.projectID})">
                                    @project.projectName
                                </a>
                            </td>
                            <td>@project.open.ToString("dd.MM.yyyy") </td>
                            <td>@project.close.ToString("dd.MM.yyyy")</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>
@model Mooshak2.Models.SubProjectsViewModels

@{
    ViewBag.Title = "Add SubProject";
    Layout = "~/Views/Shared/Teacher_Layout.cshtml";
}

<div class="text-center">
    <h2>Add subproject to @ViewBag.project.projectName</h2>
</div><br />
<div id="ccourse">
    <form class="form-group">
        @using (Html.BeginForm("AddSubProject", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <table class="createUser" cellpadding="10">
                <!--<div class="form-inline text-center"> -->
                <tr>
                    <td><label for="text" class="text-center">Sub project name:</label> </td>
                    <td>
                        <input type="text" class="form-control" @Html.EditorFor(model => model.subProjectName, new { htmlAttributes = new { @type = "text" } })
                               @Html.HiddenFor(model => model.projectID)
                    </td>
                </tr>
                <!-- </div>
                 <br /> -->
                <!--<div class="form-inline text-center"> -->
                <tr>
                    <td><label for="text">Percentage:</label></td>
                    <td>  <input class="form-control" @Html.EditorFor(model => model.percentage, new { htmlAttributes = new { @type = "number" } }) </td>
                    <td>%</td>
                </tr>
                <!-- </div>
                <br /> -->
                <!--<div class="form-inline text-center"> -->
                <tr>
                    <td><label for="text" class="text-center">Input file:</label> </td>
                    <td>@Html.TextBoxFor(model => model.inputFile, new { type = "file" }) </td>
                    <!-- </div>
                    <br /> -->
                </tr>
                <!--<div class="form-inline text-center"> -->
                <tr>
                    <td><label for="text" class="text-center">Output file:</label> </td>
                    <td>@Html.TextBoxFor(model => model.outputFile, new { type = "file" })</td>
                    <!-- </div>
                    <br /> -->
                </tr>
            </table><br />
            <div class="text-center">
                <input class="btn btn-primary" type="submit" value="Add subproject">
            </div>
        }
    </form>
</div>
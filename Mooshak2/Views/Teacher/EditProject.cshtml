

@{
    ViewBag.Title = "EditProject";
}

<h2>Edit Project</h2>

<form action="action_page.php">
    <!-- Project name -->
    <div class="control-group">
        <label class="control-label" for="projectName"> Project name: </label>
        <div class="controls">
            @Html.EditorFor(model => model.projectName)
            <input type="text" name="projectName"><br><br>
        </div>
    </div>
    <div>
        Number of parts in project
        <select>
            <option value="sub1">1</option>
            <option value="sub2">2</option>
            <option value="sub3">3</option>
            <option value="sub4">4</option>
            <option value="sub5">5</option>
            <option value="sub6">6</option>
            <option value="sub7">7</option>
            <option value="sub8">8</option>
            <option value="sub9">9</option>
            <option value="sub10">10</option>
        </select><br><br>
    </div>
</form>
<fieldset>

    <legend>Part 1</legend>
    Name:
    <input type="text" name="projectName"><br>
    Percentage:

    <form action="action_page.php">
        (between 1 and 100):
        <input type="number" name="quantity" min="1" max="100">
        %
    </form>
    <form action="demo_form.asp">
        <input type="file" name="pic" accept="image/*">
    </form>
</fieldset>
<input type="submit" value="Create project">
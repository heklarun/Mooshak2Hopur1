@model List<Mooshak2.Models.UsersViewModels>
@{
    ViewBag.Title = "TeacherToGroup";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container body-content">
        <h2 class="text-center">@ViewBag.course.courseName</h2>
        <div class="group">
            <div class="row">
                <div class="col-md-3">&nbsp;</div>
                <div class="col-md-6 col-xs-12 table-scroll">
                    <table class="table table-bordered table-striped">
                        <tr>
                            <td></td>
                            <th>All teachers</th>
                        </tr>
                        @for (var i = 0; i < Model.Count(); i++)
                {
                            <tr>
                                <td>
                                    @Html.CheckBoxFor(x => Model[i].selected)
                                    @Html.HiddenFor(item => Model[i].userID)
                                    @Html.HiddenFor(item => Model[i].selected)
                                </td>
                                <td>@Model[i].firstName @Model[i].lastName</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
       </div><br />

    <div class="row text-center">
        <input type="submit" value="Confirm">
    </div>
}


@model List<Mooshak2.Models.UsersViewModels>
@{
    ViewBag.Title = "StudentGroup";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <h2>@ViewBag.course.courseName</h2>
            <table class="table">
                <tr>
                    <td></td>
                    <td>Name</td>
                </tr>
                @for (var i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>
                            @Html.CheckBoxFor(x => Model[i].selected)
                            @Html.HiddenFor(item => Model[i].userID)
                            @Html.HiddenFor(item => Model[i].selected)
                        </td>
                        <td>@Model[i].firstName @Model[i].lastName</td>
                    </tr>
                }
            </table>
            <input type="submit" value="Add students">
        </div>
    </div>

}
